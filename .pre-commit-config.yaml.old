# See: https://pre-commit.com/
#
# Install pre-commit
#   pip install pre-commit -or- brew install pre-commit
#
# Apply to all files without committing:
#   pre-commit run --all-files
#
# Update this file:
#   pre-commit autoupdate

default_language_version:
  python: python3.13

minimum_pre_commit_version: 3.3.0

repos:
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v5.0.0
    hooks:
      - id: check-json
      - id: check-merge-conflict
      - id: check-yaml
        args:
          - --unsafe # needed for parsing CFN
      - id: end-of-file-fixer
        exclude: |
          (?x)^(
            .*\.json-result|
            .*\.min.js|
            .*\.min.css.*
          )$
      - id: trailing-whitespace
        exclude_types: ["markdown"]
      - id: mixed-line-ending
      - id: check-case-conflict
      - id: detect-aws-credentials
        args:
          - --allow-missing-credentials
      - id: detect-private-key

  - repo: https://github.com/astral-sh/ruff-pre-commit
    # Ruff version.
    rev: v0.11.13
    hooks:
      # Run the linter.
      - id: ruff
        types_or: [python, pyi]
        args: [--fix]
      # Run the formatter.
      - id: ruff-format
        types_or: [python, pyi]

  - repo: https://github.com/gruntwork-io/pre-commit
    rev: v0.1.29
    hooks:
      - id: terraform-fmt
      - id: terraform-validate
      - id: tflint
      # - id: shellcheck
      # - id: gofmt
      # - id: golint

  # - repo: git://github.com/antonbabenko/pre-commit-terraform
  #   rev: v1.97.3
  #   hooks:
  #     - id: checkov
  #     # - id: terraform_tfsec
  #     # - id: terraform_docs

  - repo: https://github.com/bridgecrewio/checkov.git
    rev: 3.2.438
    hooks:
      - id: checkov
        args:
          - --quiet
          - --compact
          # - --soft-fail
          # - id: checkov_container
          # - id: checkov_diff
          # - id: checkov_diff_container
          # - id: checkov_secrets
          # - id: checkov_secrets_container

  - repo: https://github.com/PyCQA/isort
    rev: 6.0.1
    hooks:
      - id: isort

  # - repo: https://github.com/psf/black
  #   rev: 25.1.0
  #   hooks:
  #     - id: black

  - repo: https://github.com/aws-cloudformation/cfn-lint
    rev: v1.35.4 # The version of cfn-lint to use
    hooks:
      - id: cfn-lint
        files: "cfn-*"
        types_or: ["json", "yaml"]

  - repo: https://github.com/pycqa/flake8
    rev: 7.2.0
    hooks:
      - id: flake8
        args:
          - --max-line-length=99
        additional_dependencies:
          - flake8-docstrings
          - flake8-use-fstring
          - flake8-print
          - flake8-isort
          - flake8-eradicate
          - flake8-bugbear
          - flake8-builtins
          - flake8-comprehensions
          - flake8-todos
          # - flake8-length

  - repo: https://github.com/adrienverge/yamllint.git
    rev: v1.37.1
    hooks:
      - id: yamllint
        args: [-c=.github/linters/.yaml-lint.yml]
        types_or: ["yaml"]

  - repo: https://github.com/rbubley/mirrors-prettier
    rev: v3.5.3
    hooks:
      - id: prettier
        args: [--prose-wrap=preserve, --print-width=80, --trailing-comma=none]
        types_or: ["json", "yaml"]

  - repo: local
    hooks:
      - id: pylint
        name: pylint
        entry: pylint
        language: system
        types: [python]
        require_serial: true
        args:
          - -rn
          - --fail-under=8.5
          - --disable=C0301
          - --disable=C0114
          - --disable=C0115
          - --disable=C0116
          # - --disable=W1203

  - repo: https://github.com/jackdewinter/pymarkdown
    rev: v0.9.30
    hooks:
      - id: pymarkdown
        args:
          - --config=.pymarkdown-linting-cfg.json
          - scan

  - repo: https://github.com/python-poetry/poetry
    rev: "2.1.3"
    hooks:
      - id: poetry-check
      # - id: poetry-lock

  - repo: https://github.com/python-poetry/poetry-plugin-export
    rev: "1.9.0"
    hooks:
      - id: poetry-export
        args:
          ["--with", "dev", "-f", "requirements.txt", "-o", "requirements.txt"]
        verbose: true
